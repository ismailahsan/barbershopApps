<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".RegisterCustomer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-80dp"
            android:layout_marginRight="-50dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_bg_circle1"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_regist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_barbershop_scissors"></ImageView>

            <TextView
                android:id="@+id/tv_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_login"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:text="Register"
                android:fontFamily="@font/gothamroundedbold"
                android:textSize="24sp"
                android:textColor="@color/black_primaryText"></TextView>

            <EditText
                android:id="@+id/et_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_signIn"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:hint="Nama"
                android:fontFamily="@font/gothamroundedmedium"
                android:textSize="16sp"
                android:textColor="@color/black_primaryText"></EditText>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_signIn"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:fontFamily="@font/gothamroundedmedium"
                android:textSize="16sp"
                android:textColor="@color/black_primaryText"></EditText>

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_email"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:inputType="textVisiblePassword"
                android:hint="Password"
                android:fontFamily="@font/gothamroundedmedium"
                android:textSize="16sp"
                android:textColor="@color/black_primaryText"></EditText>

            <EditText
                android:id="@+id/et_noHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_email"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:inputType="number"
                android:hint="Handphone"
                android:fontFamily="@font/gothamroundedmedium"
                android:textSize="16sp"
                android:textColor="@color/black_primaryText"></EditText>

            <EditText
                android:id="@+id/et_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_email"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:hint="Alamat"
                android:fontFamily="@font/gothamroundedmedium"
                android:textSize="16sp"
                android:textColor="@color/black_primaryText"></EditText>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_regist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sign up"
                    android:fontFamily="@font/gothamroundedbold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white_primaryText"></TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>