<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Splashscreen">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/ic_barber_pole"></ImageView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BERBERSHOP"
        android:textSize="18dp"
        android:fontFamily="@font/gothamroundedmedium"
        android:layout_toRightOf="@+id/logo"
        android:layout_marginTop="40dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finder"
        android:textSize="15dp"
        android:fontFamily="@font/gothamrounded_lightitalic"
        android:layout_toRightOf="@+id/logo"
        android:layout_below="@+id/text1"></TextView>



</RelativeLayout>