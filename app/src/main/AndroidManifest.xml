<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barberapps">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_barber_pole"
        android:label="Barber Apps"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_barber_pole"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Profile"></activity>
        <activity android:name=".ProfilKepster" />
        <activity android:name=".ProfilBarbershop" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivityKepster" />
        <activity
            android:name=".RegisterCustomer"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Kepster" />
        <activity android:name=".HAPUS" />
        <activity android:name=".OrderDone" />
        <activity android:name=".WaitingList" />
        <activity
            android:name=".RegisterBarbershop"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".MainActivity" />
        <activity android:name=".MainActivityBarbershop" />
        <activity android:name=".DetailBarbershop" />
        <activity android:name=".DaftarBarbershop" />
        <activity android:name=".Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>